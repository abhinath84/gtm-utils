{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./app/cli",
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
  },
  "exclude": ["node_modules", "jsdoc", "app"]
}
